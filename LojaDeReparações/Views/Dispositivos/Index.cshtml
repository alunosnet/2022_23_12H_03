@using LojaDeReparações.Helper
@model IEnumerable<LojaDeReparações.Models.Dispositivo>

@{
    ViewBag.Title = "Lista de Dispositivos";
}

<h2>Lista de Dispositivos</h2>

<p>
    @if (User.IsInRole("Cliente"))
    {
        @Html.ActionLink("Adicionar Novo Dispositivo", "Create/" + Html.UserId(User))
    }
    else
    {
        @Html.ActionLink("Adicionar Novo Dispositivo", "Create")
    }

</p>
<table class="table">
    <tr>
        @if (User.IsInRole("Cliente")==false)
        {
            <th>
                @Html.DisplayNameFor(model => model.utilizador.Nome)
            </th>
        }
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (User.IsInRole("Cliente") == false)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.utilizador.Nome)
                </td>
            }
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Problema)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @if (item.Estado == false)
                    {
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
    }

</table>

@using LojaDeReparações.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Herminio Reparações</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Herminio Reparações", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrador") || User.IsInRole("Funcionário"))
                        {
                            <li>@Html.ActionLink("Utilizadores", "Index", "Utilizadores")</li>
                            <li>@Html.ActionLink("Dispositivos", "Index", "Dispositivos")</li>
                            <li>@Html.ActionLink("Reparações", "Index", "Reparacoes")</li>
                            if (User.IsInRole("Administrador")){ 
                                <li>
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Consultas</a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Pesquisa", "Index", "Consultas")</li>
                                        <li>@Html.ActionLink("Cliente Problemático", "PesquisaProb", "Consultas")</li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li>@Html.ActionLink("Meus Dispositivos", "Index/" + Html.UserId(User), "Dispositivos")</li>
                            <li>@Html.ActionLink("Reparações", "Index/" + Html.UserId(User), "Reparacoes")</li>
                        }
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @Html.Raw("Olá " + User.Identity.Name)
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Editar perfil", "Edit/" + Html.UserId(User), "Utilizadores")</li>
                                <li>@Html.ActionLink("Terminar sessão", "Logout", "Login")</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                        <li>@Html.ActionLink("Registar", "Registar", "Login")</li>
                    }
                </ul>
        </div>
        </div>
    </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

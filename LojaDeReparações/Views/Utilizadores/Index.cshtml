@model IEnumerable<LojaDeReparações.Models.Utilizador>

@{
    ViewBag.Title = "Lista de Utilizadores";
}

<h2>Lista de Utilizadores</h2>

<p>
    @if (User.IsInRole("Administrador"))
    {
        @Html.ActionLink("Criar Novo Utilizador", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perfil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perfil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @if (User.IsInRole("Administrador")) { 
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) <span>|</span>
                @Html.ActionLink("Mudar Estado", "MudarEstado", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
